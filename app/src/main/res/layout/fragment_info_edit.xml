<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.InfoEditFragment"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/info_avatar"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars[7]"
        android:contentDescription="TODO" />

    <EditText
        android:id="@+id/new_fname"
        android:hint="First name"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:textColor="#000000"
        android:maxLines="1"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/new_lname"
        android:hint="Last name"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:maxLines="1"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/new_address"
        android:hint="Address"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:textColor="#000000"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/new_email"
        android:hint="Email"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:maxLines="1"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/new_phone"
        android:hint="Phone"
        android:textSize="20sp"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:maxLines="1"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_save_edit"
        android:text="@string/info_btn_save"
        android:background="@drawable/bg_button"
        android:textColor="#ffffff"
        android:fontFamily="casual"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>