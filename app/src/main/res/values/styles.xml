<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light">

    </style>

    <!-- Title -->
    <style name="app_text_title">
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="app_text_title2">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Loading screen -->
    <style name="loading_img">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="loading_txt">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Login screen -->
    <style name="login_img">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="login_btn">
        <item name="android:layout_marginRight">70dp</item>
        <item name="android:layout_marginLeft">70dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Phone verification screen -->
    <style name="phone_veri_txt">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="phone_veri_code">
        <item name="android:textColorHint">@color/editText</item>
        <item name="android:backgroundTint">@color/editText</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">100dp</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Address screen -->
    <style name="address_title">
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="address_info_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
    </style>

    <style name="address_info">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="address_edit">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textPostalAddress</item>
    </style>

    <style name="address_button">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="address_gps">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">210dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
